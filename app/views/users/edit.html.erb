
<h2 class="form-header-title">User info</h2>
<div class="form-body">
  <%= form_with model:@user, local:true do |f| %>
  <div class="form-group has-icon">
    <div>Name<%= f.text_field :name %></div>

  <div class="form-group has-icon">
    <div class="user-edit-image">
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb" %>
    </div>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
  </div>

  <div>Introduction<%= f.text_field :introduction %></div>

  </div>
  <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>
      </div>
    </div>
  </div>
</div>